# AWS Configuration
AWS_REGION=us-east-1

# Bedrock LLM Configuration
BEDROCK_LLM_AWS_REGION=us-east-1
BEDROCK_LLM_MODEL_ID=us.anthropic.claude-3-7-sonnet-20250219-v1:0
BEDROCK_LLM_MAX_TOKENS=4096
BEDROCK_LLM_TEMPERATURE=0.0
BEDROCK_LLM_RETRY_ATTEMPTS=10
BEDROCK_LLM_RETRY_DELAY=1.0

# Bedrock Embed Configuration
BEDROCK_EMBED_AWS_REGION=us-east-1
BEDROCK_EMBED_MODEL_ID=amazon.titan-embed-text-v2:0
BEDROCK_EMBED_DIMENSION=1024
BEDROCK_EMBED_RETRY_ATTEMPTS=10
BEDROCK_EMBED_RETRY_DELAY=1.0

# Bedrock Rerank Configuration
BEDROCK_RERANK_AWS_REGION=us-west-2
BEDROCK_RERANK_MODEL_ID=cohere.rerank-v3-5:0
BEDROCK_RERANK_RETRY_ATTEMPTS=10
BEDROCK_RERANK_RETRY_DELAY=1.0

# Neptune Configuration
NEPTUNE_ENDPOINT=YOUR_NEPTUNE_NAME.cluster-ID.us-east-1.neptune.amazonaws.com
NEPTUNE_PORT=8182
NEPTUNE_AWS_REGION=us-east-1

# OpenSearch Configuration
OPENSEARCH_ENDPOINT=https://YOUR_OPENSEARCH_ID.us-east-1.aoss.amazonaws.com
OPENSEARCH_PORT=443
OPENSEARCH_AWS_REGION=us-east-1
OPENSEARCH_INDEX=memory_embeddings
OPENSEARCH_DIMENSION=1024

# Memory Configuration
MEMORY_DEFAULT_EXPIRATION_DAYS=30
MEMORY_CLEANUP_INTERVAL_HOURS=24

# MCP Configuration
MCP_TRANSPORT='sse'
MCP_HOST=127.0.0.1
MCP_PORT=8000

# Application Configuration
LOG_LEVEL=INFO
